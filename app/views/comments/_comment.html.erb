
<div class="comments">
  <hr>
  <% if comments.any? %>
    <% comments.includes(:author).each do |comment| %>
      <div class="grid-x">
        <div class="cell small-11 flex-container comment-group">
          <p>
            <b><%= comment.author.name %></b>
          </p>
          <p>&nbsp; : &nbsp;</p>
          <p class="comment">
            <%= comment.text %>
          </p>
        </div>
        <div class="cell small-1 text-right">
          <% if can? :destroy, comment%>
              <%= button_to "/users/#{comment.author_id}/posts/#{comment.post_id}/comments/#{comment.id}", method: :delete do %>
                  <i class="trash alternate outline icon"></i>
              <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="comment">No Comment.</p>
  <% end %>
</div>